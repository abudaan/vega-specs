{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "width": 720,
    "height": 70,
    "padding": 30,
    "autosize": "none",
    "scales": [
        {
            "name": "xOverview",
            "type": "time",
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "domain": {
                "data": "sp500",
                "field": "date"
            }
        },
        {
            "name": "yOverview",
            "type": "linear",
            "range": [
                70,
                0
            ],
            "domain": {
                "data": "sp500",
                "field": "price"
            },
            "nice": true,
            "zero": true
        }
    ],
    "signals": [
        {
            "name": "selected_start_date",
            "value": 946681200000,
            "on": [
                {
                    "events": "[@date_start:mousedown, window:mouseup] > window:mousemove!",
                    "update": "invert('xOverview', x())"
                }
            ]
        },
        {
            "name": "selected_end_date",
            "value": 1259622000000,
            "on": [
                {
                    "events": "[@date_end:mousedown, window:mouseup] > window:mousemove!",
                    "update": "invert('xOverview', x())"
                }
            ]
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "xOverview",
            "encode": {
                "ticks": {
                    "enter": {
                        "stroke": {
                            "value": "white"
                        }
                    }
                },
                "domain": {
                    "enter": {
                        "stroke": {
                            "value": "white"
                        }
                    }
                },
                "labels": {
                    "enter": {
                        "fill": {
                            "value": "white"
                        }
                    }
                }
            }
        }
    ],
    "data": [
        {
            "name": "sp500",
            "url": "../../data/sp500.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "price": "number",
                    "date": "date"
                }
            }
        }
    ],
    "marks": [
        {
            "name": "date_start",
            "type": "symbol",
            "encode": {
                "update": {
                    "x": {
                        "scale": "xOverview",
                        "signal": "selected_start_date"
                    },
                    "y": {
                        "scale": "yOverview",
                        "value": 600
                    },
                    "size": {
                        "value": 300
                    },
                    "shape": {
                        "value": "diamond"
                    },
                    "fill": {
                        "value": "yellow"
                    }
                }
            }
        },
        {
            "name": "date_end",
            "type": "symbol",
            "encode": {
                "update": {
                    "x": {
                        "scale": "xOverview",
                        "signal": "selected_end_date"
                    },
                    "y": {
                        "scale": "yOverview",
                        "value": 600
                    },
                    "size": {
                        "value": 300
                    },
                    "shape": {
                        "value": "diamond"
                    },
                    "fill": {
                        "value": "red"
                    }
                }
            }
        },
        {
            "name": "date_start_label",
            "type": "text",
            "encode": {
                "enter": {
                    "x": {
                        "value": 5
                    },
                    "y": {
                        "value": 5
                    },
                    "fill": {
                        "value": "#eee"
                    },
                    "text": {
                        "value": "Date"
                    }
                },
                "update": {
                    "text": {
                        "signal": "selected_start_date"
                    }
                }
            }
        },
        {
            "name": "date_end_label",
            "type": "text",
            "encode": {
                "enter": {
                    "x": {
                        "signal": "width"
                    },
                    "y": {
                        "value": 5
                    },
                    "fill": {
                        "value": "#eee"
                    },
                    "text": {
                        "value": "Date"
                    },
                    "align": {
                        "value": "right"
                    }
                },
                "update": {
                    "text": {
                        "signal": "selected_end_date"
                    }
                }
            }
        }
    ],
    "projections": []
}

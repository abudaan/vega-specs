{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "none",
    "width": 900,
    "height": 600,
    "padding": {
        "top": 0,
        "left": 0,
        "right": 0,
        "bottom": 0
    },
    "signals": [
        {
            "name": "location",
            "value": "some text"
        }
    ],
    "data": [
        {
            "name": "containers",
            "url": "containers.topo.json",
            "format": {
                "type": "topojson",
                "feature": "containers.geo"
            },
            "transform": [
                {
                    "type": "geopoint",
                    "projection": "projection",
                    "fields": [
                        "geometry.coordinates.0",
                        "geometry.coordinates.1"
                    ],
                    "as": [
                        "x",
                        "y"
                    ]
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "type": "mercator"
        }
    ],
    "marks": [
        {
            "type": "text",
            "name": "info",
            "interactive": false,
            "encode": {
                "enter": {
                    "x": {
                        "value": 100
                    },
                    "y": {
                        "value": 100
                    },
                    "fill": {
                        "value": "black"
                    },
                    "fontSize": {
                        "value": 20
                    }
                },
                "update": {
                    "text": {
                        "signal": "location"
                    }
                }
            }
        },
        {
            "type": "image",
            "name": "container",
            "from": {
                "data": "containers"
            },
            "encode": {
                "enter": {
                    "url": {
                        "value": "./afval.png"
                    },
                    "x": {
                        "field": "x"
                    },
                    "y": {
                        "field": "y"
                    }
                }
            }
        }
    ]
}
{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "width": 800,
    "height": 450,
    "autosize": "none",
    "data": [
        {
            "name": "buurten",
            "url": "buurten.topo.json",
            "format": {
                "type": "topojson",
                "feature": "buurten-schiedam"
            },
            "transform": [
                {
                    "type": "geopath",
                    "projection": "projection"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "scale",
            "value": 1200,
            "bind": {
                "input": "range",
                "min": 500,
                "max": 3000
            }
        },
        {
            "name": "translateX",
            "value": 450,
            "bind": {
                "input": "range",
                "min": -500,
                "max": 1200
            }
        },
        {
            "name": "translateY",
            "value": 260,
            "bind": {
                "input": "range",
                "min": -300,
                "max": 700
            }
        }
    ],
    "projections": [
        {
            "name": "projection",
            "type": "mercator",
            "scale": {
                "signal": "scale"
            },
            "translate": [
                {
                    "signal": "translateX"
                },
                {
                    "signal": "translateY"
                }
            ]
        }
    ],
    "marks": [
        {
            "type": "path",
            "from": {
                "data": "buurten"
            },
            "encode": {
                "enter": {
                    "strokeWidth": {
                        "value": 1
                    },
                    "stroke": {
                        "value": "#ee0000"
                    },
                    "fill": {
                        "value": "#00ee00"
                    }
                },
                "update": {
                    "path": {
                        "field": "path"
                    }
                }
            }
        }
    ]
}
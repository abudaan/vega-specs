{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "description": "map",
    "width": 1500,
    "height": 600,
    "padding": {
        "top": 30,
        "left": 0,
        "right": 0,
        "bottom": 0
    },
    "autosize": "none",
    "padding": {
        "top": 0,
        "left": 0,
        "right": 0,
        "bottom": 0
    },
    "signals": [
        {
            "name": "hoverContainer",
            "value": "null",
            "on": [
                {
                    "events": "@container:mouseover",
                    "update": "datum"
                },
                {
                    "events": "@container:mouseout",
                    "update": "null"
                }
            ]
        },
        {
            "name": "hoverContainerInfo",
            "value": "niets",
            "update": "hoverContainer ? hoverContainer.location : 'potverdorie'"
        }
    ],
    "data": [
        {
            "name": "containers",
            "url": "containers2.topo.json",
            "format": {
                "type": "topojson",
                "feature": "containers"
            }
        },
        {
            "name": "containers_info",
            "url": "containers2.topo.json",
            "format": {
                "type": "json",
                "property": "object.containers.geo.geometries"
            }
        },
        {
            "name": "scholen",
            "url": "scholen.topo.json",
            "format": {
                "type": "topojson",
                "feature": "scholen.geo"
            }
        },
        {
            "name": "graticule",
            "transform": [
                {
                    "type": "graticule",
                    "step": [
                        15,
                        15
                    ]
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "type": "mercator"
        }
    ],
    "marks": [
        {
            "type": "text",
            "name": "info",
            "interactive": false,
            "encode": {
                "enter": {
                    "x": {
                        "value": 100
                    },
                    "y": {
                        "value": 100
                    },
                    "fill": {
                        "value": "black"
                    },
                    "fontSize": {
                        "value": 20
                    }
                },
                "update": {
                    "text": {
                        "signal": "hoverContainerInfo"
                    }
                }
            }
        },
        {
            "type": "shape",
            "from": {
                "data": "containers"
            },
            "name": "container",
            "encode": {
                "enter": {
                    "strokeWidth": {
                        "value": 1
                    },
                    "stroke": {
                        "value": "#e00"
                    },
                    "fill": {
                        "value": null
                    }
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        },
        {
            "type": "image",
            "from": {
                "data": "scholen"
            },
            "encode": {
                "encode": {
                    "enter": {
                        "url": {
                            "value": "./school.png"
                        },
                        "x": {
                            "field": "x"
                        },
                        "y": {
                            "field": "y"
                        }
                    }
                }
            }
        }
    ]
}